<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:api-gateway="http://www.mulesoft.org/schema/mule/api-gateway"
	xmlns:secure-properties="http://www.mulesoft.org/schema/mule/secure-properties"
	xmlns:os="http://www.mulesoft.org/schema/mule/os"
	xmlns:tls="http://www.mulesoft.org/schema/mule/tls"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns:apikit="http://www.mulesoft.org/schema/mule/mule-apikit"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.mulesoft.org/schema/mule/api-gateway http://www.mulesoft.org/schema/mule/api-gateway/current/mule-api-gateway.xsd
		http://www.mulesoft.org/schema/mule/secure-properties http://www.mulesoft.org/schema/mule/secure-properties/current/mule-secure-properties.xsd
		http://www.mulesoft.org/schema/mule/os http://www.mulesoft.org/schema/mule/os/current/mule-os.xsd
		http://www.mulesoft.org/schema/mule/tls http://www.mulesoft.org/schema/mule/tls/current/mule-tls.xsd
		http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
		http://www.mulesoft.org/schema/mule/mule-apikit http://www.mulesoft.org/schema/mule/mule-apikit/current/mule-apikit.xsd
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">

	<!-- ============================================== -->
	<!-- GLOBAL PROPERTIES - Bootstrap Configuration   -->
	<!-- ============================================== -->
	<global-property name="mule.env" value="dev" doc:name="Environment Property"/>
	<global-property name="encryption.key" value="mule-encryption-key" doc:name="Encryption Key"/>

	<!-- ============================================== -->
	<!-- CONFIGURATION PROPERTIES                      -->
	<!-- ============================================== -->
	<!-- Standard Configuration Properties -->
	
	<!-- Secure Configuration Properties -->
	<secure-properties:config name="Secure_Properties_Config" 
		key="${encryption.key}" 
		file="properties/config-secure-${mule.env}.yaml" 
		doc:name="Secure Properties Config">
		<secure-properties:encrypt algorithm="Blowfish"/>
	</secure-properties:config>

	<!-- ============================================== -->
	<!-- DEFAULT ERROR HANDLER REFERENCE               -->
	<!-- ============================================== -->
	<configuration defaultErrorHandler-ref="Global_Error_Handler" doc:name="Global Configuration"/>

	<!-- ============================================== -->
	<!-- HTTP LISTENER CONFIGURATION                   -->
	<!-- ============================================== -->
	<!-- HTTP Listener for Development/Testing -->
	<http:listener-config name="HTTP_Listener_Config" doc:name="HTTP Listener Config">
		<http:listener-connection host="${http.host}" port="${http.port}">
			<reconnection>
				<reconnect frequency="${reconnection.frequency}" count="${reconnection.count}"/>
			</reconnection>
		</http:listener-connection>
	</http:listener-config>

	<!-- ============================================== -->
	<!-- HTTP REQUEST CONFIGURATION (Backend Calls)    -->
	<!-- ============================================== -->
	<http:request-config name="HTTP_Request_Config" 
		doc:name="HTTP Request Config" 
		responseTimeout="${responseTimeout}">
		<http:request-connection 
			host="${coreBanking.backend.host}" 
			port="${coreBanking.backend.port}">
			<reconnection>
				<reconnect frequency="${reconnection.frequency}" count="${reconnection.count}"/>
			</reconnection>
		</http:request-connection>
	</http:request-config>

	<!-- ============================================== -->
	<!-- APIKIT CONFIGURATION                          -->
	<!-- ============================================== -->

	<!-- ============================================== -->
	<!-- API AUTODISCOVERY                             -->
	<!-- ============================================== -->
	<api-gateway:autodiscovery 
		apiId="${api.autodiscovery.id}" 
		ignoreBasePath="true" 
		doc:name="API Autodiscovery" 
		flowRef="sfdc-core-system-api-main"/>

	<!-- ============================================== -->
	<!-- OBJECT STORE CONFIGURATION                    -->
	<!-- ============================================== -->
	<os:object-store name="Core_Banking_Object_Store" 
		persistent="true" 
		maxEntries="${objectstore.maxEntries}" 
		entryTtl="${objectstore.entryTtl}" 
		entryTtlUnit="MINUTES" 
		expirationInterval="${objectstore.expirationInterval}" 
		expirationIntervalUnit="MINUTES" 
		doc:name="Core Banking Object Store"/>
	<configuration-properties doc:name="Configuration properties" doc:id="4eb6652f-f63e-4a4c-9c42-4e4e6f02e33e" file="properties/config-${mule.env}.yaml" />


</mule>
